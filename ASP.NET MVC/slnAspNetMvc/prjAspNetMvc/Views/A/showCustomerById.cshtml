
@{
    ViewBag.Title = "showCustomerById";
}

<h2>客戶查詢資料結果</h2>
<hr />
<p><img src="~/Content/@ViewBag.Img" width="560" height="400" /></p>

    @{ 
        if(ViewBag.customer == null)
        {
            @:沒有客戶資料
        }
        else
        {
            @:客戶姓名：@ViewBag.customer.fName
        <p>
            客戶電話：@ViewBag.customer.fPhone
        </p>
        }
    }

