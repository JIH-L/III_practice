
@{
    ViewBag.Title = "Login";
    string s1 = ViewBag.CODE.Substring(0, 1) + ".png";
    string s2 = ViewBag.CODE.Substring(1, 1) + ".png";
    string s3 = ViewBag.CODE.Substring(2, 1) + ".png";
    string s4 = ViewBag.CODE.Substring(3, 1) + ".png";
}

<h2>登入系統</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                帳號
                <input type="text" hint="關鍵字" class="form-control" name="txtAccount" />
                密碼
                <input type="text" hint="關鍵字" class="form-control" name="txtPassword" />
                驗證碼
                <input type="text" hint="關鍵字" class="form-control" name="txtCode" />
                <img src="~/Content/@s1" />
                <img src="~/Content/@s2" />
                <img src="~/Content/@s3" />
                <img src="~/Content/@s4" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入" class="btn btn-default" />
            </div>
        </div>
    </div>
}

